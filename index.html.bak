                }
                
                // ÿßÿ≥⁄©ÿ±ŸàŸÑ ŸÅŸàÿ±€å ÿ®Ÿá ÿ®ÿßŸÑÿß ŸÇÿ®ŸÑ ÿßÿ≤ ÿ™ÿ∫€å€åÿ± ŸÖÿ≠ÿ™Ÿàÿß
                window.scrollTo(0, 0);
                
                // ŸÖÿÆŸÅ€å ⁄©ÿ±ÿØŸÜ section Ÿáÿß
                removeActiveClass(SELECTORS.section);
                
                // ŸÖÿÆŸÅ€å ⁄©ÿ±ÿØŸÜ detail view Ÿáÿß€å ÿØ€å⁄Øÿ±
