                    section.setAttribute('aria-hidden', 'false');
                    section.focus(); // ŸÅŸà⁄©Ÿàÿ≥ ÿ®ÿ±ÿß€å screen readers
                    
                    
                    // ÿ±ÿßŸá‚ÄåÿßŸÜÿØÿßÿ≤€å ÿØÿßÿ¥ÿ®Ÿàÿ±ÿØŸáÿß (Dashboards) ŸÅŸÇÿ∑ ŸáŸÜ⁄ØÿßŸÖ ŸÜ€åÿßÿ≤
// ÿßÿ≥⁄©ÿ±ŸàŸÑ smooth ÿ®Ÿá ÿ®ÿßŸÑÿß ÿ®ÿß ÿ™ÿßÿÆ€åÿ± ⁄©Ÿà⁄Ü⁄© (ŸÅŸÇÿ∑ ÿßÿ≤ ŸÖŸÜŸà)
                    if (!addToHistory) {
                        setTimeout(() => {
                            window.scrollTo({
                                top: 0,
                                behavior: 'smooth'
                            });
                        }, 10);
                    }
                    
                    return true;
                } else {
                    console.error(`Section not found: ${sectionId}`);
                    return false;
                }
                
            } catch (error) {
                console.error('Error in changeSection:', error);
                return false;
            }
        }
        
        // ==================== Event Handlers ====================
        
        /**
         * ŸÖÿØ€åÿ±€åÿ™ ⁄©ŸÑ€å⁄© ÿ±Ÿà€å navigation buttons
         */
        function handleNavigation(e) {
            const btn = e.target.closest(SELECTORS.navBtn);
            if (!btn) return;
            
            try {
                const sectionId = btn.dataset.section;
                
                if (!sectionId) {
                    console.error('Button missing data-section attribute');
                    return;
                }
                
                // Ÿæÿß⁄© ⁄©ÿ±ÿØŸÜ ÿ™ÿßÿ±€åÿÆ⁄ÜŸá ŸàŸÇÿ™€å ÿßÿ≤ ŸÖŸÜŸà ÿßÿ≥ÿ™ŸÅÿßÿØŸá ŸÖ€å‚Äåÿ¥ŸàÿØ
                clearHistory();
                
                // ÿ™ÿ∫€å€åÿ± active button Ÿà ARIA states
                if (cachedElements.navBtns) {
                    cachedElements.navBtns.forEach(b => {
                        b.classList.remove(CLASSES.active);
                        b.setAttribute('aria-selected', 'false');
                    });
                } else {
                    removeActiveClass(SELECTORS.navBtn);
                }
                
                addActiveClass(btn);
                btn.setAttribute('aria-selected', 'true');
                
                // ÿ™ÿ∫€å€åÿ± section (ÿ®ÿØŸàŸÜ ÿßÿ∂ÿßŸÅŸá ⁄©ÿ±ÿØŸÜ ÿ®Ÿá ÿ™ÿßÿ±€åÿÆ⁄ÜŸá)
                changeSection(sectionId, false);
                
            } catch (error) {
                console.error('Error in navigation handler:', error);
            }
        }
        
        /**
         * ŸÖÿØ€åÿ±€åÿ™ ⁄©ŸÑ€å⁄© ÿ±Ÿà€å detail cards
         */
        function handleDetailCardClick(e) {
            const card = e.target.closest('[data-detail]');
            if (!card) return;
            
            e.preventDefault();
            e.stopPropagation();
            
            try {
                const detailId = card.dataset.detail;
                
                if (!detailId) {
                    console.error('Card missing data-detail attribute');
                    return;
                }
                
                if (DEBUG_MODE) { console.log('Attempting to show detail view:', detailId); }
                showDetailView(detailId);
                
            } catch (error) {
                console.error('Error in detail card handler:', error);
            }
        }
        
        /**
         * ŸÖÿØ€åÿ±€åÿ™ ŸÑ€åŸÜ⁄©‚ÄåŸáÿß€å ÿØÿßÿÆŸÑ€å
         */
        function handleInternalLinks(e) {
            const link = e.target.closest('a.internal-link[data-detail]');
            if (!link) return;
            
            e.preventDefault();
            e.stopPropagation();
            
            try {
                const detailId = link.dataset.detail;
                
                if (!detailId) {
                    console.error('Link missing data-detail attribute');
                    return;
                }
                
                showDetailView(detailId);
                
            } catch (error) {
                console.error('Error in internal link handler:', error);
            }
        }
        
        /**
         * ŸÖÿØ€åÿ±€åÿ™ keyboard navigation
         */
        function handleKeyboardNavigation(e) {
            // ŸÅŸÇÿ∑ ÿ®ÿ±ÿß€å ÿßŸÑŸÖŸÜÿ™‚ÄåŸáÿß€å€å ⁄©Ÿá role="button" ÿØÿßÿ±ŸÜÿØ
            const target = e.target;
            
            if (!target.matches('[role="button"]') && !target.matches('button')) {
                return;
            }
            
            // Enter €åÿß Space
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                target.click();
            }
            
            // Arrow keys ÿ®ÿ±ÿß€å navigation buttons
            if (target.matches(SELECTORS.navBtn)) {
                handleArrowKeyNavigation(e, target);
            }
        }
        
        /**
         * ŸÖÿØ€åÿ±€åÿ™ arrow keys ÿ®ÿ±ÿß€å navigation
         */
        function handleArrowKeyNavigation(e, currentBtn) {
            if (!cachedElements.navBtns || cachedElements.navBtns.length === 0) {
                return;
            }
            
            const buttons = Array.from(cachedElements.navBtns);
            const currentIndex = buttons.indexOf(currentBtn);
            
            if (currentIndex === -1) return;
            
            let nextIndex = currentIndex;
            
            if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
                e.preventDefault();
                nextIndex = (currentIndex + 1) % buttons.length;
            } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
                e.preventDefault();
                nextIndex = (currentIndex - 1 + buttons.length) % buttons.length;
            } else if (e.key === 'Home') {
                e.preventDefault();
                nextIndex = 0;
            } else if (e.key === 'End') {
                e.preventDefault();
                nextIndex = buttons.length - 1;
            }
            
            if (nextIndex !== currentIndex) {
                buttons[nextIndex].focus();
                buttons[nextIndex].click();
            }
        }
        
        /**
         * ŸÖÿØ€åÿ±€åÿ™ ÿÆÿ∑ÿß€å ÿ™ÿµŸà€åÿ± Ÿæÿ±ŸàŸÅÿß€åŸÑ
         */
        function handleProfileImageError(img) {
            try {
                // ⁄Ü⁄© ⁄©ÿ±ÿØŸÜ Ÿàÿ¨ŸàÿØ parentElement
                if (!img || !img.parentElement) {
                    if (DEBUG_MODE) { console.warn('Profile image or parent element not found'); }
                    return;
                }
                
                const fallback = document.createElement('div');
                fallback.className = 'profile-fallback';
                fallback.textContent = 'AL';
                fallback.style.cssText = `
                    width: 100%;
                    height: 100%;
                    border-radius: 50%;
                    background: linear-gradient(135deg, var(--primary), var(--secondary));
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 4rem;
                    font-weight: bold;
                    color: white;
                `;
                
                // ŸÖÿÆŸÅ€å ⁄©ÿ±ÿØŸÜ ÿ™ÿµŸà€åÿ± ÿ®Ÿá ÿ¨ÿß€å ÿ≠ÿ∞ŸÅ (safer approach)
                img.style.display = 'none';
                
                // ÿßÿ∂ÿßŸÅŸá ⁄©ÿ±ÿØŸÜ fallback
                img.parentElement.appendChild(fallback);
                
            } catch (error) {
                console.error('Error handling profile image error:', error);
            }
        }
        
        // ==================== Initialization ====================
        
        /**
         * ÿßŸÅ⁄©ÿ™ ÿ™ÿß€åŸæ€å ÿ®ÿ±ÿß€å ŸÖÿ™ŸÜ About Me
         */
        let hasTyped = false;
        
        function typeWriter(elementId, speed = 40) {
            if (hasTyped) return;
            
            const element = document.getElementById(elementId);
            if (!element) return;
            
            const textSpan = element.querySelector('.typing-text');
            const cursor = element.querySelector('.typing-cursor');
            
            if (!textSpan || !cursor) return;
            
            const fullText = textSpan.textContent;
            textSpan.textContent = '';
            textSpan.classList.add('visible');
            cursor.style.display = 'inline-block';
            
            let i = 0;
            
            function type() {
                if (i < fullText.length) {
                    textSpan.textContent += fullText.charAt(i);
                    i++;
                    setTimeout(type, speed);
                } else {
                    // Ÿæÿß€åÿßŸÜ ÿ™ÿß€åŸæ - ÿ≠ÿ∞ŸÅ cursor
                    setTimeout(() => {
                        cursor.style.display = 'none';
                        hasTyped = true;
                    }, 500);
                }
            }
            
            // ÿ¥ÿ±Ÿàÿπ ÿ®ÿß ÿ™ÿßÿÆ€åÿ± ⁄©Ÿàÿ™ÿßŸá
            setTimeout(type, 300);
        }
        
        /**
         * ÿ±ÿßŸá‚ÄåÿßŸÜÿØÿßÿ≤€å ÿßŸàŸÑ€åŸá
         */
        function init() {
            try {
                // Cache ⁄©ÿ±ÿØŸÜ ÿßŸÑŸÖŸÜÿ™‚ÄåŸáÿß
                cacheElements();
                
                // ÿ¥ÿ±Ÿàÿπ ÿßŸÅ⁄©ÿ™ ÿ™ÿß€åŸæ€å ÿ®ÿ±ÿß€å About Me
                typeWriter('about-text', 40);
                
                // Event Delegation ÿ®ÿ±ÿß€å navigation
                document.addEventListener('click', handleNavigation);
                
                // Event Delegation ÿ®ÿ±ÿß€å detail cards
                document.addEventListener('click', handleDetailCardClick);
                
                // Event Delegation ÿ®ÿ±ÿß€å ŸÑ€åŸÜ⁄©‚ÄåŸáÿß€å ÿØÿßÿÆŸÑ€å
                document.addEventListener('click', handleInternalLinks);
                
                // Keyboard navigation
                document.addEventListener('keydown', handleKeyboardNavigation);
                
                // ŸÖÿØ€åÿ±€åÿ™ ÿ™ÿµŸà€åÿ± Ÿæÿ±ŸàŸÅÿß€åŸÑ
                const profileImg = document.getElementById('profileImage');
                if (profileImg) {
                    // ÿß⁄Øÿ± ÿ™ÿµŸà€åÿ± ŸÇÿ®ŸÑÿßŸã ŸÑŸàÿØ ÿ¥ÿØŸá
                    if (profileImg.complete && profileImg.naturalHeight !== 0) {
                        profileImg.classList.add('loaded');
                    } else {
                        // ŸàŸÇÿ™€å ÿ™ÿµŸà€åÿ± ŸÑŸàÿØ ŸÖ€å‚Äåÿ¥ŸàÿØ
                        profileImg.addEventListener('load', function() {
                            this.classList.add('loaded');
                        });
                    }
                    
                    // ŸÖÿØ€åÿ±€åÿ™ ÿÆÿ∑ÿß
                    profileImg.addEventListener('error', function() {
                        handleProfileImageError(this);
                    });
                }
                
                // ÿßÿ∑ŸÖ€åŸÜÿßŸÜ ÿßÿ≤ ŸÜŸÖÿß€åÿ¥ section ÿßŸàŸÑ€åŸá
                const activeSection = document.querySelector(`${SELECTORS.section}.${CLASSES.active}`);
                if (!activeSection) {
                    showMainSection('about');
                }
                
            } catch (error) {
                console.error('Error in initialization:', error);
            }
        }
        
        // init is invoked once at the end (with optional validation)
        // ==================== Global Functions ====================
        // ÿß€åŸÜ ÿ™Ÿàÿßÿ®ÿπ ÿ®ÿß€åÿØ ÿØÿ± global scope ÿ®ÿßÿ¥ŸÜÿØ ÿ®ÿ±ÿß€å ÿØÿ≥ÿ™ÿ±ÿ≥€å ÿßÿ≤ HTML
        window.closeDetail = closeDetail;
        window.showDetailView = showDetailView;
        window.changeSection = changeSection;
        
        // ==================== Navigation History ====================
        const navigationHistory = [];
        
        function pushHistory(type, id, scrollPosition) {
            navigationHistory.push({ 
                type, 
                id, 
                scrollPosition: scrollPosition || window.pageYOffset || document.documentElement.scrollTop 
            });
            if (navigationHistory.length > 10) {
                navigationHistory.shift(); // ÿ≠ÿØÿß⁄©ÿ´ÿ± 10 ÿ™ÿßÿ±€åÿÆ⁄ÜŸá ŸÜ⁄ØŸá ÿØÿßÿ±€å
            }
        }
        
        function popHistory() {
            return navigationHistory.pop();
        }
        
        function clearHistory() {
            navigationHistory.length = 0;
        }
        
        function saveCurrentScrollPosition() {
            return window.pageYOffset || document.documentElement.scrollTop;
        }
        
        function restoreScrollPosition(position) {
            if (typeof position === 'number') {
                setTimeout(() => {
                    window.scrollTo({
                        top: position,
                        behavior: 'instant' // ÿ®ÿØŸàŸÜ ÿßŸÜ€åŸÖ€åÿ¥ŸÜ
                    });
                }, 50);
            }
        }
        
        // ==================== Back Button Functions ====================
        window.showBackButton = function() {
            const floatingBackBtn = document.querySelector('.floating-back-button');
            
            // ŸÜŸÖÿß€åÿ¥ ÿØ⁄©ŸÖŸá ÿ¥ŸÜÿßŸàÿ±
            if (floatingBackBtn) {
                floatingBackBtn.classList.add('visible');
            }
        };
        
        window.hideBackButton = function() {
            const floatingBackBtn = document.querySelector('.floating-back-button');
            
            if (floatingBackBtn) {
                floatingBackBtn.classList.remove('visible');
            }
        };
        
        window.handleBackButton = function() {
            // ⁄Øÿ±ŸÅÿ™ŸÜ ÿ¢ÿÆÿ±€åŸÜ ŸÖ⁄©ÿßŸÜ ÿßÿ≤ ÿ™ÿßÿ±€åÿÆ⁄ÜŸá
            const previousLocation = popHistory();
            
            if (previousLocation) {
                if (previousLocation.type === 'section') {
                    // ÿ®ÿßÿ≤⁄Øÿ¥ÿ™ ÿ®Ÿá section
                    closeDetailWithoutScroll();
                    changeSection(previousLocation.id, false);
                    // ÿ®ÿßÿ≤⁄Øÿ±ÿØÿßŸÜÿØŸÜ ŸÖŸàŸÇÿπ€åÿ™ ÿßÿ≥⁄©ÿ±ŸàŸÑ
                    restoreScrollPosition(previousLocation.scrollPosition);
                } else if (previousLocation.type === 'detail') {
                    // ÿ®ÿßÿ≤⁄Øÿ¥ÿ™ ÿ®Ÿá detail ÿØ€å⁄Øÿ±
                    closeDetailWithoutScroll(previousLocation.id.replace('detail-', ''));
                    // ÿ®ÿßÿ≤⁄Øÿ±ÿØÿßŸÜÿØŸÜ ŸÖŸàŸÇÿπ€åÿ™ ÿßÿ≥⁄©ÿ±ŸàŸÑ
                    restoreScrollPosition(previousLocation.scrollPosition);
                }
            } else {
                // ÿß⁄Øÿ± ÿ™ÿßÿ±€åÿÆ⁄ÜŸá ÿÆÿßŸÑ€å ÿßÿ≥ÿ™ÿå ÿ®Ÿá section ŸÅÿπŸÑ€å ÿ®ÿ±⁄Øÿ±ÿØ
                closeDetail();
            }
        };
        
        // ==================== Accordion Function ====================
        window.toggleAccordion = function(button) {
            const content = button.nextElementSibling;
            const isOpen = button.getAttribute('aria-expanded') === 'true';
            
            if (isOpen) {
                button.setAttribute('aria-expanded', 'false');
                content.classList.remove('open');
            } else {
                button.setAttribute('aria-expanded', 'true');
                content.classList.add('open');
            }
        };
        
        // ==================== Debug & Validation ====================
        /**
         * ÿ™ÿ≥ÿ™ Ÿà ÿßÿπÿ™ÿ®ÿßÿ±ÿ≥ŸÜÿ¨€å ÿ≥ÿßÿÆÿ™ÿßÿ±
         */

        // ==================== Dashboards (Interactive: Demo + Real CSV) ====================
        
// Dashboard demo removed (external pages used instead).
;
function validateStructure() {
            const issues = [];
            
            // ⁄Ü⁄© ⁄©ÿ±ÿØŸÜ sections
            const sections = document.querySelectorAll(SELECTORS.section);
            if (sections.length !== 7) {
                issues.push(`Expected 7 sections, found ${sections.length}`);
            }
            
            // ⁄Ü⁄© ⁄©ÿ±ÿØŸÜ navigation buttons
            const navBtns = document.querySelectorAll(SELECTORS.navBtn);
            if (navBtns.length !== 7) {
                issues.push(`Expected 7 nav buttons, found ${navBtns.length}`);
            }
            
            // ⁄Ü⁄© ⁄©ÿ±ÿØŸÜ detail views
            const detailViews = document.querySelectorAll(SELECTORS.detailView);
            if (DEBUG_MODE) {
                console.log(`Found ${detailViews.length} detail views`);
            }
            
            // ⁄Ü⁄© ⁄©ÿ±ÿØŸÜ clickable cards
            const clickableCards = document.querySelectorAll(SELECTORS.detailCard);
            if (DEBUG_MODE) {
                console.log(`Found ${clickableCards.length} clickable cards`);
            }
            
            // ⁄Ü⁄© ⁄©ÿ±ÿØŸÜ ARIA attributes
            const missingAria = [];
            clickableCards.forEach((card, index) => {
                if (!card.getAttribute('role')) {
                    missingAria.push(`Card ${index} missing role`);
                }
                if (!card.getAttribute('tabindex')) {
                    missingAria.push(`Card ${index} missing tabindex`);
                }
                if (!card.getAttribute('aria-label')) {
                    missingAria.push(`Card ${index} missing aria-label`);
                }
            });
            
            if (missingAria.length > 0) {
                issues.push(...missingAria);
            }
            
            // ŸÜŸÖÿß€åÿ¥ ŸÜÿ™ÿß€åÿ¨
            if (issues.length === 0) {
                if (DEBUG_MODE) { console.log('‚úÖ All structure validation passed!'); }
            } else {
                if (DEBUG_MODE) { console.warn('‚ö†Ô∏è Structure issues found:'); }
                if (DEBUG_MODE) {
                    issues.forEach(issue => console.warn('  -', issue));
                }
            }
            
            return issues.length === 0;
        }
        
        // ÿßÿ¨ÿ±ÿß€å validation ÿ®ÿπÿØ ÿßÿ≤ init
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                init();
                // ÿßÿ¨ÿ±ÿß€å validation ÿ®ÿß ÿ™ÿßÿÆ€åÿ± ⁄©Ÿàÿ™ÿßŸá
                if (DEBUG_MODE) { setTimeout(validateStructure, 500); }
            });
        } else {
            init();
            if (DEBUG_MODE) { setTimeout(validateStructure, 500); }
        }
        
    </script>
