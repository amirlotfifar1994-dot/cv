                if (DEBUG_MODE) { console.log('Found detail view:', detailView.id); }
                
                // ÿ∞ÿÆ€åÿ±Ÿá ŸÖ⁄©ÿßŸÜ ŸÅÿπŸÑ€å Ÿà ŸÖŸàŸÇÿπ€åÿ™ ÿßÿ≥⁄©ÿ±ŸàŸÑ ÿØÿ± ÿ™ÿßÿ±€åÿÆ⁄ÜŸá
                const currentActive = document.querySelector(`${SELECTORS.section}.${CLASSES.active}, ${SELECTORS.detailView}.${CLASSES.active}`);
                if (currentActive) {
                    const type = currentActive.classList.contains('section') ? 'section' : 'detail';
                    const scrollPos = saveCurrentScrollPosition();
