                // ÿ∞ÿÆ€åÿ±Ÿá section ŸÅÿπŸÑ€å ÿØÿ± ÿ™ÿßÿ±€åÿÆ⁄ÜŸá
                const currentSection = document.querySelector(`${SELECTORS.section}.${CLASSES.active}`);
                if (currentSection && addToHistory) {
                    const scrollPos = saveCurrentScrollPosition();
