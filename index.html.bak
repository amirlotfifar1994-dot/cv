                // ŸÜŸÖÿß€åÿ¥ section ŸÖŸàÿ±ÿØ ŸÜÿ∏ÿ± Ÿà ÿ≠ÿ∞ŸÅ aria-hidden
                const section = document.getElementById(sectionId);
                
