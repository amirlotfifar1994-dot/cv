                }
                
                // ÿßÿ≥⁄©ÿ±ŸàŸÑ ŸÅŸàÿ±€å ÿ®Ÿá ÿ®ÿßŸÑÿß ŸÇÿ®ŸÑ ÿßÿ≤ ÿ™ÿ∫€å€åÿ± ŸÖÿ≠ÿ™Ÿàÿß (ŸÅŸÇÿ∑ ÿßÿ≤ ŸÖŸÜŸà)
                if (!addToHistory) {
                    window.scrollTo(0, 0);
                }
                
                // ÿ®ÿ≥ÿ™ŸÜ ŸáŸÖŸá detail view Ÿáÿß
                removeActiveClass(SELECTORS.detailView);

                // keep the dashboard workspace parked unless a dashboard detail is open
// ŸÖÿÆŸÅ€å ⁄©ÿ±ÿØŸÜ ŸáŸÖŸá section Ÿáÿß Ÿà ÿßÿ∂ÿßŸÅŸá ⁄©ÿ±ÿØŸÜ aria-hidden
                const sections = cachedElements.sections || document.querySelectorAll(SELECTORS.section);
