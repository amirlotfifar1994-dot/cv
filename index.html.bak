                    }
                } else {
                    // ŸÜŸÖÿß€åÿ¥ section ÿßÿµŸÑ€å
                    showMainSection();
                    scrollToTop(true); // ÿßÿ≥⁄©ÿ±ŸàŸÑ smooth ÿ®Ÿá ÿ®ÿßŸÑÿß
                }
                
            } catch (error) {
                console.error('Error in closeDetail:', error);
                // Emergency fallback
                showMainSection('about');
                scrollToTop(true);
            }
        }
        
        /**
         * ŸÜŸÖÿß€åÿ¥ detail view
         */
        function showDetailView(detailId) {
            try {
                const detailView = document.getElementById('detail-' + detailId);
                
                if (!detailView) {
                    console.error('Detail view not found:', 'detail-' + detailId);
                    if (DEBUG_MODE) {
                    console.log('Available detail views:', Array.from(document.querySelectorAll('.detail-view')).map(d => d.id));
