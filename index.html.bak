<script>
        'use strict'; // ÿßÿ≥ÿ™ŸÅÿßÿØŸá ÿßÿ≤ strict mode
        
        // ==================== Constants ====================
        const SELECTORS = {
            navBtn: '.nav-btn',
            section: '.section',
            detailView: '.detail-view',
            detailCard: '[data-detail]',
            profileImage: '#profileImage'
        };
        
        const CLASSES = {
            active: 'active',
            loading: 'loading'
        };
        
        const TIMING = {
            scrollDelay: 100,
            focusDelay: 100,
            transitionDuration: 300
        };
        
        const BREAKPOINTS = {
            mobile: 768,
            tablet: 1024,
            desktop: 1440
        };
        
        const DEBUG_MODE = false; // ÿ™ÿ∫€å€åÿ± ÿ®Ÿá true ÿ®ÿ±ÿß€å ÿØ€åÿ®ÿß⁄Ø
        
        // ==================== Cache DOM Elements ====================
        let cachedElements = {
            navBtns: null,
            sections: null,
            detailViews: null
        };
        
        /**
         * Cache ⁄©ÿ±ÿØŸÜ ÿßŸÑŸÖŸÜÿ™‚ÄåŸáÿß€å Ÿæÿ±⁄©ÿßÿ±ÿ®ÿ±ÿØ
         */
        function cacheElements() {
            try {
                cachedElements.navBtns = document.querySelectorAll(SELECTORS.navBtn);
                cachedElements.sections = document.querySelectorAll(SELECTORS.section);
                cachedElements.detailViews = document.querySelectorAll(SELECTORS.detailView);
            } catch (error) {
                console.error('Error caching elements:', error);
            }
        }
        
        // ==================== Utility Functions ====================
        
        /**
         * ÿßÿ≥⁄©ÿ±ŸàŸÑ ŸÜÿ±ŸÖ ÿ®Ÿá ÿ®ÿßŸÑÿß€å ÿµŸÅÿ≠Ÿá
         */
        function scrollToTop(smooth = true) {
            try {
                if ('scrollTo' in window) {
                    window.scrollTo({
                        top: 0, 
                        behavior: smooth ? 'smooth' : 'instant'
                    });
                } else {
                    window.scrollTop = 0;
                    document.documentElement.scrollTop = 0;
                }
            } catch (error) {
                console.error('Error in scrollToTop:', error);
            }
        }
        
        /**
         * ÿ≠ÿ∞ŸÅ ⁄©ŸÑÿßÿ≥ active ÿßÿ≤ ŸáŸÖŸá ÿßŸÑŸÖŸÜÿ™‚ÄåŸáÿß€å €å⁄© selector
         */
        function removeActiveClass(selector) {
            try {
                // ÿßÿ≥ÿ™ŸÅÿßÿØŸá ÿßÿ≤ cached elements ÿß⁄Øÿ± ŸÖŸàÿ¨ŸàÿØ ÿ®ÿßÿ¥ÿØ
                let elements;
                
                if (selector === SELECTORS.navBtn && cachedElements.navBtns) {
                    elements = cachedElements.navBtns;
                } else if (selector === SELECTORS.section && cachedElements.sections) {
                    elements = cachedElements.sections;
                } else if (selector === SELECTORS.detailView && cachedElements.detailViews) {
                    elements = cachedElements.detailViews;
                } else {
                    elements = document.querySelectorAll(selector);
                }
                
                elements.forEach(el => el.classList.remove(CLASSES.active));
                return elements.length;
            } catch (error) {
                console.error(`Error removing active class from ${selector}:`, error);
                return 0;
            }
        }
        
        /**
         * ÿßÿ∂ÿßŸÅŸá ⁄©ÿ±ÿØŸÜ ⁄©ŸÑÿßÿ≥ active ÿ®Ÿá €å⁄© ÿßŸÑŸÖŸÜÿ™
         */
        function addActiveClass(element) {
            if (element && element.classList) {
                element.classList.add(CLASSES.active);
                return true;
            }
            return false;
        }
        
        // ==================== Main Functions ====================
        
        /**
         * ŸÜŸÖÿß€åÿ¥ section ÿßÿµŸÑ€å
         */
        function showMainSection(sectionId) {
            try {
                // ÿß⁄Øÿ± sectionId ÿØÿßÿØŸá ŸÜÿ¥ÿØŸáÿå ÿßÿ≤ navigation Ÿæ€åÿØÿß ⁄©ŸÜ
                if (!sectionId) {
                    const activeBtn = document.querySelector(`${SELECTORS.navBtn}.${CLASSES.active}`);
                    sectionId = activeBtn ? activeBtn.dataset.section : 'about';
                }
                
                const section = document.getElementById(sectionId);
                
                if (section) {
                    removeActiveClass(SELECTORS.section);
                    addActiveClass(section);
                    
                    // ŸÖÿÆŸÅ€å ⁄©ÿ±ÿØŸÜ back button
                    hideBackButton();
                    
                    return true;
                } else {
                    console.error(`Section not found: ${sectionId}`);
                    
                    // Fallback: ŸÜŸÖÿß€åÿ¥ ÿßŸàŸÑ€åŸÜ section
                    const firstSection = document.querySelector(SELECTORS.section);
                    if (firstSection) {
                        removeActiveClass(SELECTORS.section);
                        addActiveClass(firstSection);
                        hideBackButton();
                        return true;
                    }
                }
                
                return false;
                
            } catch (error) {
                console.error('Error in showMainSection:', error);
                return false;
            }
        }
        
        /**
         * ÿ®ÿ≥ÿ™ŸÜ detail view ÿ®ÿØŸàŸÜ ÿßÿ≥⁄©ÿ±ŸàŸÑ
         */
        function closeDetailWithoutScroll(returnTo) {
            try {
                // ŸÖÿÆŸÅ€å ⁄©ÿ±ÿØŸÜ ŸáŸÖŸá detail view Ÿáÿß
                const removedCount = removeActiveClass(SELECTORS.detailView);
if (removedCount === 0) {
                    if (DEBUG_MODE) { console.warn('No detail views found to close'); }
                }
                
                if (returnTo) {
                    // ŸÜŸÖÿß€åÿ¥ detail view ÿÆÿßÿµ
                    const detailId = 'detail-' + returnTo;
                    const detailView = document.getElementById(detailId);
                    
                    if (detailView) {
                        addActiveClass(detailView);
                    } else {
                        console.error(`Detail view not found: ${detailId}`);
                        showMainSection();
                        return;
                    }
                } else {
                    // ŸÜŸÖÿß€åÿ¥ section ÿßÿµŸÑ€å
                    showMainSection();
                }
                
                // ÿßÿ≥⁄©ÿ±ŸàŸÑ ŸÜŸÖ€å‚Äå⁄©ŸÜ€åŸÖ - ŸÖŸàŸÇÿπ€åÿ™ ÿßÿ≥⁄©ÿ±ŸàŸÑ ÿØÿ± handleBackButton ÿ®ÿßÿ≤⁄Øÿ±ÿØÿßŸÜÿØŸá ŸÖ€å‚Äåÿ¥ŸàÿØ
                
            } catch (error) {
                console.error('Error in closeDetailWithoutScroll:', error);
                // Emergency fallback
                showMainSection('about');
                scrollToTop();
            }
        }
        
        /**
         * ÿ®ÿ≥ÿ™ŸÜ detail view Ÿà ÿ®ÿßÿ≤⁄Øÿ¥ÿ™
         */
        function closeDetail(returnTo) {
            try {
                // ŸÖÿÆŸÅ€å ⁄©ÿ±ÿØŸÜ ŸáŸÖŸá detail view Ÿáÿß
                const removedCount = removeActiveClass(SELECTORS.detailView);
if (removedCount === 0) {
                    if (DEBUG_MODE) { console.warn('No detail views found to close'); }
                }
                
                if (returnTo) {
                    // ŸÜŸÖÿß€åÿ¥ detail view ÿÆÿßÿµ
                    const detailId = 'detail-' + returnTo;
                    const detailView = document.getElementById(detailId);
                    
                    if (detailView) {
                        addActiveClass(detailView);
                        scrollToTop(true); // ÿßÿ≥⁄©ÿ±ŸàŸÑ smooth ÿ®Ÿá ÿ®ÿßŸÑÿß
                    } else {
                        console.error(`Detail view not found: ${detailId}`);
                        showMainSection();
                        scrollToTop(true);
